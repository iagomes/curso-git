<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Account</field>
        <field>CNPJ__c</field>
        <field>CodigoLoja__c</field>
        <field>Score__c</field>
        <field>Margem__c</field>
        <field>MargemAlvo__c</field>
        <field>Amount</field>
        <field>AvisoMalha__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>OrcamentoSolicitacaoAprovacao</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.NecessitaAprovacaoPricing__c</field>
                <operation>equals</operation>
                <value>Verdadeiro</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Aprovação</label>
        <name>Aprovacao</name>
    </approvalStep>
    <description>Processo de aprovação para enviar um orçamento editado ou criado para validação do time de pricing.</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.EnviarAprovacao__c</field>
            <operation>equals</operation>
            <value>Verdadeiro</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>AtualizarAprovadoComercial</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AtualizarAprovadoPricing</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AtualizarNecessitaAprovacaoComercial</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AtualizarNecessitaAprovacaoPricing</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AtualizarRejeicaoProcesso</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AtualizarReprovado</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Oportunidade - Aprovação do Pricing</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>AtualizarAprovadoComercialRecall</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AtualizarAprovadoPricingRecall</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AtualizarEmDigitacaoRecall</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AtualizarNecessitaAprovacaoPricingRecall</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AtualizarNecessitaAprovComercialRecall</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AtualizarRecallProcesso</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
